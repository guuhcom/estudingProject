@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="align-items-center align-content-center align-content-lg-center align-content-md-center align-content-sm-center align-content-xl-center">
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">Um erro occoreu na sua requisição.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <h3>Message:</h3>
    <p>
        @TempData["ErroPage"]
    </p>
    <p>
        <strong>A equipe de desenvolvimento agradece pela compreensão</strong> - Trabalhando sempre para melhorar o nosso sistem. :'
    </p>
</div>
